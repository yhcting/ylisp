/*
 * Function which has only one argument.
 */
NFUNC(cos,         "math.cos",        YLANfunc,
    "math.cos <value> : [Double]\n"
    "    -calculates consine.\n"
    "    @value [Double]: angle expressed in radians\n")

NFUNC(sin,         "math.sin",        YLANfunc,
    "math.sin <value> : [Double]\n"
    "    -calculates sine.\n"
    "    @value [Double]: angle expressed in radians\n")

NFUNC(tan,         "math.tan",        YLANfunc,
    "math.tan <value> : [Double]\n"
    "    -calculates tangent.\n"
    "    @value [Double]: angle expressed in radians\n")

NFUNC(acos,        "math.acos",       YLANfunc,
    "math.acos <value> : [Double]\n"
    "    -calculates arc cosine.\n"
    "    @value [Double]: value in the interval [-1, +1].\n"
    "    @return:         expressed in radians.\n")


NFUNC(asin,        "math.asin",       YLANfunc,
    "math.asin <value> : [Double]\n"
    "    -calculates arc sine.\n"
    "    @value [Double]: value in the interval [-1, +1].\n"
    "    @return:         expressed in radians.\n")

NFUNC(atan,        "math.atan",       YLANfunc,
    "math.atan <value> : [Double]\n"
    "    -calculates arc tangent.\n"
    "    @value [Double]:\n"
    "    @return:         expressed in radians.\n")

NFUNC(cosh,        "math.cosh",       YLANfunc,
    "math.cosh <value> : [Double]\n"
    "    -calculates hyperbolic cosine of x.\n")

NFUNC(sinh,        "math.sinh",       YLANfunc,
    "math.sinh <value> : [Double]\n"
    "    -calculates hyperbolic sine of x.\n")

NFUNC(tanh,        "math.tanh",       YLANfunc,
    "math.tanh <value> : [Double]\n"
    "    -calculates hyperbolic tangent of x.\n")

NFUNC(exp,         "math.exp",        YLANfunc,
    "math.exp <value> : [Double]\n"
    "    -calculates base-e exponential of x.\n")

NFUNC(log,         "math.log",        YLANfunc,
    "math.log <value> : [Double]\n"
    "    -calculates base-e logarithm of x.\n")

NFUNC(log10,       "math.log10",      YLANfunc,
    "math.log10 <value> : [Double]\n"
    "    -calculates base-10 logarithm of x.\n")

NFUNC(sqrt,        "math.sqrt",       YLANfunc,
    "math.log <value> : [Double]\n"
    "    -calculates sqare root of x.\n")

NFUNC(ceil,        "math.ceil",       YLANfunc,
    "math.ceil <value> : [Double]\n"
    "    -calculates the smallest integral value that is not less than x.\n")

NFUNC(floor,       "math.floor",      YLANfunc,
    "math.floor <value> : [Double]\n"
    "    -calculates the largest integral value that is not greater than x.\n")

NFUNC(fabs,        "math.fabs",       YLANfunc,
    "math.fabs <value> : [Double]\n"
    "    -calculates absolute value of x.\n")

NFUNC(integer,     "math.integer",    YLANfunc,
    "math.ingeger <value> : [Double]\n"
    "    -get value of integer part of x.\n")

NFUNC(fraction,    "math.fraction",   YLANfunc,
    "math.fraction <value> : [Double]\n"
    "    -get value of fraction part of x.\n")

/*
 * Function which has two arguments
 */
NFUNC(pow,         "math.pow",        YLANfunc,
    "math.pow <base> <exponent> : [Double]\n"
    "    -return <base> raised to the power <exponent>\n")
